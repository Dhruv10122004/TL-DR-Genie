{
    "manifest_version": 3,
    "name": "TL;DR-Genie",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["conten.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "option_page": "option.html",
    "host_permissions": [
        "<all_urls>"
    ]
}